{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "allowJs": true,

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",

    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
